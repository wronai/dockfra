# ============================================================
# DOCKFRA WIZARD — Configuration
# Copy to .env and fill in your values.
# This file is loaded and saved by the setup wizard.
# ============================================================

# ── Infrastructure ───────────────────────────────────────────
ENVIRONMENT=local
STACKS=all

# ── Device SSH ───────────────────────────────────────────────
DEVICE_IP=
DEVICE_USER=pi
DEVICE_PORT=22

# ── Git ──────────────────────────────────────────────────────
GIT_NAME=
GIT_EMAIL=
GITHUB_SSH_KEY=~/.ssh/id_ed25519

# ── LLM / OpenRouter ─────────────────────────────────────────
OPENROUTER_API_KEY=
LLM_MODEL=google/gemini-flash-1.5

# ── App stack env vars ───────────────────────────────────────
POSTGRES_USER=dockfra
POSTGRES_PASSWORD=
POSTGRES_DB=dockfra
REDIS_PASSWORD=
SECRET_KEY=
APP_NAME=dockfra
APP_VERSION=0.1.0
DEPLOY_MODE=local

# ── Ports (change if conflicts) ──────────────────────────────
VNC_RPI3_PORT=6080
DESKTOP_VNC_PORT=6081
WIZARD_PORT=5050
